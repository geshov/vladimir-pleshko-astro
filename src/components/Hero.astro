---
const name = "Владимир Юрьевич Плешко";
const ranks = [
  "Доктор математических наук",
  "Программист",
  "Более 35 лет опыта работы в IT-отрасли",
];
---

<section class="_section">
  <div class="_container">
    <div class="grid grid-cols-1 md:grid-cols-12 items-center gap-10">
      <div class="md:col-span-7">
        <div class="flex flex-col gap-8">
          <h1 class="text-5xl font-bold">{name}</h1>

          <div class="flex flex-col gap-3">
            {
              ranks.map((rank) => (
                <div class="flex items-center gap-2">
                  <box-icon name="check-circle" class="w-10 h-10 fill-accent" />
                  <span class="text-lg">{rank}</span>
                </div>
              ))
            }
          </div>
        </div>
      </div>

      <div class="md:col-span-5 md:px-10">
        <div class="skeleton w-full h-[450px]"></div>
      </div>
    </div>
  </div>
</section>

<script>
  import anime from "animejs/lib/anime.es.js";
</script>
