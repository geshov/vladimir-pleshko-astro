---
import { Picture } from "astro:assets";
import photo from "../assets/images/spiderman.jpg";

const widths = [400, 800, 1200, 1600];
const sizes = "(max-width: 640px) 95vw, (max-width: 768px) 85vw, 30vw";

const name = "Владимир Юрьевич Плешко";
const ranks = [
  "Доктор физико-математических наук",
  "Программист",
  "Более 35 лет опыта работы в IT-отрасли",
];

const cells = Array.from({ length: 150 }, (empty, index) => index);
---

<section class="_section">
  <div class="_container">
    <div class="grid grid-cols-1 md:grid-cols-12 items-center gap-10">
      <div class="md:col-span-7">
        <div class="flex flex-col gap-8">
          <label class="flex items-center gap-2 cursor-pointer w-fit">
            <div class="badge badge-ghost font-medium">Garden</div>

            <input
              type="checkbox"
              value="retro"
              class="toggle theme-controller"
            />

            <div class="badge badge-ghost">Retro</div>
          </label>

          <h1 class="text-5xl font-bold">{name}</h1>

          <div class="flex flex-col gap-3">
            {
              ranks.map((rank) => (
                <div
                  class="rank flex items-center gap-2"
                  style="transform: translateX(150px); opacity: 0;">
                  <div class="w-10 h-10">
                    <box-icon
                      name="check-circle"
                      class="w-10 h-10 fill-accent"
                    />
                  </div>

                  <div class="text-lg">{rank}</div>
                </div>
              ))
            }
          </div>

          <div class="rank" style="transform: translateX(150px); opacity: 0;">
            <button class="btn btn-primary">История успеха</button>
          </div>
        </div>
      </div>

      <div class="md:col-span-5 px-0 sm:px-10 md:px-0 lg:px-10">
        <div class="relative rounded-lg overflow-hidden">
          <div class="absolute w-full h-full grid grid-cols-10 z-10">
            {
              cells.map((cell) => (
                <div class="cell aspect-square bg-base-100" />
              ))
            }
          </div>
          <div class="cells absolute w-full h-full bg-base-100 z-20"></div>
          <Picture
            src={photo}
            widths={widths}
            sizes={sizes}
            alt={name}
            loading="eager"
          />
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import anime from "animejs/lib/anime.es.js";

  const ranks = document.querySelectorAll(".rank");

  const timeline = anime.timeline({
    duration: 750,
  });

  ranks.forEach((rank) => {
    timeline.add({
      targets: rank,
      translateX: 0,
      opacity: 1,
    });
  });

  anime({
    targets: ".cells",
    opacity: 0,
    easing: "linear",
    delay: 250,
    duration: 250,
  });

  anime({
    targets: ".cell",
    scale: 0,
    easing: "linear",
    duration: 2500,
  });
</script>
