---
import { Picture } from "astro:assets";
import photo from "../assets/images/hero.jpg";

import Dino1 from "./Dino1.astro";
import Dino2 from "./Dino2.astro";

const widths = [400, 600, 800, 1000, 1200, 1400, 1600];
const sizes = "(max-width: 768px) 90vw, 35vw";

const name = "Владимир Юрьевич Плешко";
const ranks = [
  "Доктор физико-математических наук",
  "Программист",
  "Более 35 лет опыта работы в IT-отрасли",
];

const cells = Array.from({ length: 120 }, (empty, index) => index);
---

<section class="_section overflow-hidden">
  <div class="_container">
    <div
      x-data="hero"
      class="grid grid-cols-1 md:grid-cols-12 items-center gap-16">
      <div class="relative md:col-span-7 md:order-2">
        <div
          x-intersect.half.once="showRanks"
          class="flex flex-col gap-8 my-16">
          <!-- <label class="flex items-center gap-2 cursor-pointer w-fit">
            <div class="badge badge-ghost font-medium">Garden</div>

            <input
              type="checkbox"
              value="retro"
              class="toggle theme-controller"
            />

            <div class="badge badge-ghost">Retro</div>
          </label> -->

          <h1 class="text-5xl font-bold">{name}</h1>

          <div class="flex flex-col gap-3">
            {
              ranks.map((rank) => (
                <div
                  class="rank flex items-center gap-2"
                  style="transform: translateX(150px); opacity: 0;">
                  <div class="w-10 h-10">
                    <box-icon
                      name="check-circle"
                      class="w-10 h-10 fill-accent"
                    />
                  </div>

                  <div class="text-lg">{rank}</div>
                </div>
              ))
            }
          </div>

          <div class="rank" style="transform: translateX(150px); opacity: 0;">
            <button @click="scrollTo($refs.history)" class="btn btn-primary">
              История успеха
            </button>
          </div>
        </div>

        <div class="absolute left-0 -top-6 w-44 fill-base-300 -z-50">
          <Dino2 />
        </div>

        <div class="absolute right-0 bottom-0 w-44 fill-base-300 -z-50">
          <Dino1 />
        </div>
      </div>

      <div class="md:col-span-5 md:order-1">
        <div x-intersect.half.once="showPhoto" class="relative">
          <div
            class="absolute w-full h-full rounded-lg bg-gradient-to-tl from-base-300 via-transparent to-transparent -z-10">
          </div>

          <div class="absolute w-full h-full grid grid-cols-10 z-10">
            {cells.map((cell) => <div class="_" />)}
          </div>

          <div class="cover absolute w-full h-full bg-base-100 z-20"></div>

          <div class="pe-6 pb-6">
            <Picture
              class="rounded-lg"
              src={photo}
              widths={widths}
              sizes={sizes}
              alt={name}
              loading="eager"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
