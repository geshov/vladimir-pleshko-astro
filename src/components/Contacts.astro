---
import { getEntry } from "astro:content";
const contacts = await getEntry("sections", "contacts");

import SectionTitle from "./SectionTitle.astro";
import Dino3 from "./Dino3.astro";
import Feedback from "./Feedback.astro";
---

<section x-ref="contacts" class="_section">
  <div class="_container">
    <div class="flex flex-col gap-10">
      <SectionTitle title={contacts.data.title} />

      <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
        <div>
          <div class="flex flex-wrap justify-center items-start gap-8">
            <a
              href={`mailto:${contacts.data.email}`}
              target="_blank"
              class="flex flex-col items-center gap-1">
              <svg
                class="w-14 h-14 fill-accent"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24">
                <path
                  d="M20 4H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2zm0 4.7-8 5.334L4 8.7V6.297l8 5.333 8-5.333V8.7z"
                ></path>
              </svg>

              <div class="text-lg">{contacts.data.email}</div>
            </a>

            <a
              href={contacts.data.telegram}
              target="_blank"
              class="flex flex-col items-center gap-1">
              <svg
                class="w-14 h-14 fill-sky-500 opacity-65"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24">
                <path
                  d="m20.665 3.717-17.73 6.837c-1.21.486-1.203 1.161-.222 1.462l4.552 1.42 10.532-6.645c.498-.303.953-.14.579.192l-8.533 7.701h-.002l.002.001-.314 4.692c.46 0 .663-.211.921-.46l2.211-2.15 4.599 3.397c.848.467 1.457.227 1.668-.785l3.019-14.228c.309-1.239-.473-1.8-1.282-1.434z"
                ></path>
              </svg>

              <div class="text-lg">{contacts.data.telegram}</div>
            </a>
          </div>

          <div class="w-44 mx-auto my-10 fill-base-300">
            <Dino3 />
          </div>
        </div>

        <div class="md:col-span-2">
          <Feedback />
        </div>
      </div>
    </div>
  </div>
</section>
