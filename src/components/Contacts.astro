---
import { getEntry } from "astro:content";
const contacts = await getEntry("sections", "contacts");

import Feedback from "./Feedback.astro";
---

<section x-ref="contacts" class="_section">
  <div class="_container">
    <div class="flex flex-col gap-10">
      <h2 class="text-4xl text-center font-semibold">{contacts.data.title}</h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
        <div>
          <div class="flex flex-wrap justify-center items-start gap-8">
            <a
              href={`mailto:${contacts.data.email}`}
              target="_blank"
              class="flex flex-col items-center gap-1">
              <box-icon
                type="solid"
                name="envelope"
                class="w-14 h-14 fill-accent"></box-icon>
              <div class="text-lg">{contacts.data.email}</div>
            </a>

            <a
              href={contacts.data.telegram}
              target="_blank"
              class="flex flex-col items-center gap-1">
              <box-icon
                type="logo"
                name="telegram"
                class="w-14 h-14 fill-sky-500 opacity-65"></box-icon>
              <div class="text-lg">{contacts.data.telegram}</div>
            </a>
          </div>
        </div>

        <div class="md:col-span-2">
          <Feedback />
        </div>
      </div>
    </div>
  </div>
</section>
