---
import { getCollection } from "astro:content";
import { sortHistory } from "../utils/helpers";

import HistoryItem from "./HistoryItem.astro";

const history = sortHistory(await getCollection("history"));
---

<section x-ref="history" class="_section">
  <div class="_container">
    <ul
      class="timeline timeline-snap-icon max-md:timeline-compact timeline-vertical">
      {history.map((item, index) => <HistoryItem item={item} index={index} />)}
    </ul>
  </div>
</section>
