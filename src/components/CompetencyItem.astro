---
const { name, percent } = Astro.props;
---

<div class="flex flex-col gap-0">
  <label class="text-sm font-medium">{name}</label>
  <progress
    x-intersect.full.once="showCompetency"
    class="progress progress-accent h-3"
    data-value={percent}
    value="0"
    max="100"></progress>
</div>
